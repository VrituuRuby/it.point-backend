generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id  String @id @default(uuid())
  name String
  username  String
  email   String @unique
  password  String
  role String
  // branch_id String
  // branch Branch @relation(fields: [branch_id], references: [id])
  tickets Ticket[]

  @@map("users")
}

model Branch {
  id String @id @default(uuid())
  // users User[]
  name String

  @@map("branches")
}

model Ticket {
  id String @id @default(uuid())
  status String
  user User @relation(fields: [user_id], references: [id])
  user_id String
  title String
  description String
  phone String
  category Category @relation(fields: [category_id], references: [id])
  category_id String

  @@map("tickets")
}

model Category {
  id String @id @default(uuid())
  name String
  tickets Ticket[]

  @@map("categories")
}